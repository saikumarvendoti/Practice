<mvc:View
	controllerName="asst.test.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'asst/test/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<l:HorizontalLayout class="sapUiContentPadding" content="{routes>/}">
				<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{routes>title}"
				subheader="{routes>name}" press="onPress(${routes>name})">
				</GenericTile>
			</l:HorizontalLayout>
		</content>
	</Page>
</mvc:View>
