<mvc:View
	controllerName="asst.test.controller.Customers"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'asst/test/model/formatter'
	}">

	<Page
		title="{i18n>appTitle}"
		id="page">
		<content>
			<Table id="idCustomerTable" inset="false" items="{Result>/}">
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<Title text="Customers" level="H2"/>
							<ToolbarSpacer/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
			<infoToolbar>
			<OverflowToolbar>
				<Label text="Wide range of available Customers"/>
			</OverflowToolbar>
			</infoToolbar>
				<columns>
					<Column width="12em">
						<Text text="Customer ID"/>
					</Column>
					<Column width="12em">
						<Text text="Company Name"/>
					</Column>
					<Column width="12em">
						<Text text="Postal Code"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells>
							<Text text="{Result>CustomerID}"/>
							<Text text="{Result>CompanyName}"/>
							<Text text="{Result>PostalCode}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>
